<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card mt-5 rounded">
      <div class="card-header text-center pt-4">
        <h1 class="h4">
          Account Login
        </h1>
      </div>
      <img
        class="rounded-circle mx-auto d-block m-4 logo"
        src="https://upload.wikimedia.org/wikipedia/commons/e/e3/Logo_vector.png"
        alt="Logo"
      />
      <div class="card-body">
        <form action="/users/signin" method="POST">
          <div class="mb-3">
            <label for="email">Email:</label>
            <input
              type="email"
              class="form-control"
              name="email"
              placeholder="Email"
              autofocus
            />
          </div>
          <div class="mb-3">
            <label for="passswore">Password:</label>
            <input
              type="password"
              class="form-control"
              name="password"
              placeholder="Password"
            />
          </div>
          <button class="btn btn-success btn-block">
            Signin
          </button>
        </form>
      </div>

      <p class="text-center">Don't Have an Account? <a href="/users/signup" class="text-info">Register</a></p>
    </div>
  </div>
</div>