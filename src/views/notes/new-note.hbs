
<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>New Note</h3>
        </div>
        <div class="card-body">
            <form action="/notes/new_notes" method="POST">
            <div class="form-group">
                <input type="text" name="title" class="form-controller" placeholder="Title" autofocus>
            </div>
            <div class="form-group mt-3">
                <textarea name="description" class="form-control" placeholder="Description"></textarea>
            </div>
            <div class="form-group mt-3" style="text-align: center;">
                <button class="btn btn-primary-btn-block" type="submit" style="background-color: rgb(14, 157, 79);">Save</button>
            </div>
        </div>
    </div>
</div>

